     }
}


ðŸ‘Œ#include <iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter size";
    cin>>n;
    int A[n]={2,5,7,8,5};//variable size array(was not allowed in old c compiler)//
     for(int x:A)
     {
     cout<<sizeof(x)<<endl;
     printf("%d\n",x);//
     
     }
}
